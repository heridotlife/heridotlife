{
  "name": "heridotlife",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "prisma format && prisma generate && next dev",
    "build": "prisma generate && prisma migrate deploy && next build",
    "build:cloudflare": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && pnpm format",
    "lint:strict": "eslint --max-warnings=0 src",
    "typecheck": "tsc --noEmit --incremental false",
    "test:watch": "jest --watch",
    "test": "jest",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "postbuild": "prisma generate && next-sitemap --config next-sitemap.config.js",
    "prepare": "husky install",
    "deploy:staging": "./scripts/deploy-cloudflare.sh staging",
    "deploy:production": "./scripts/deploy-cloudflare.sh production"
  },
  "dependencies": {
    "@prisma/client": "5.21.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.0.0",
    "cookies-next": "4.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.438.0",
    "next": "^14.2.15",
    "prisma": "^5.21.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.3.0",
    "tailwind-merge": "^2.5.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/forms": "^0.5.9",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^15.0.7",
    "@types/react": "^18.3.9",
    "@types/supertest": "^6.0.3",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.15",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.5.0",
    "next-router-mock": "^0.9.0",
    "next-sitemap": "^2.5.28",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.47",
    "prettier": "^3.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.12",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier -w"
    ],
    "**/*.{json,css,scss,md,webmanifest}": [
      "prettier -w"
    ]
  },
  "prisma": {
    "schema": "src/db/schema.prisma"
  }
}
