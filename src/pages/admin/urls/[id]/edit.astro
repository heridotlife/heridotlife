---
import URLForm from '../../../../components/admin/URLForm';
import AdminLayout from '../../../../layouts/AdminLayout.astro';

const { id } = Astro.params;
const urlId = parseInt(id!);
---

<AdminLayout title="Edit URL">
    <div class='max-w-2xl mx-auto space-y-6'>
      <div>
        <h1 class='text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-sky-700 via-blue-600 to-cyan-700 dark:from-sky-300 dark:via-cyan-200 dark:to-blue-300'>
          Edit Short URL
        </h1>
        <p class='text-sky-600 dark:text-sky-400 mt-2'>
          Update your short URL details
        </p>
      </div>

      <div class='bg-white/80 dark:bg-slate-800/80 backdrop-blur-sm rounded-lg shadow-lg border border-sky-200 dark:border-sky-700 p-6'>
        <URLForm urlId={urlId} client:load />
      </div>
    </div>
</AdminLayout>
